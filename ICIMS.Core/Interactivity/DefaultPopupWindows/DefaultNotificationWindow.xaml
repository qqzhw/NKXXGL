<controls:MetroWindow x:Class="ICIMS.Core.Interactivity.DefaultPopupWindows.DefaultNotificationWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            MinWidth="300" MinHeight="150" 
        xmlns:controls="http://metro.wenge.com/winfx/xaml/controls"
            Title="{Binding Title}"  ShowMaxRestoreButton="False" ShowTitleBar="True" IsWindowDraggable="False" AllowDrop="False" ResizeMode="CanMinimize"   WindowStartupLocation="CenterScreen" WindowState="Normal" SizeToContent="WidthAndHeight">
    <controls:MetroWindow.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
        </Style>
        
    </controls:MetroWindow.Style>

    <Grid x:Name="LayoutRoot" Margin="5"> 
        <ContentControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Content="{Binding Content}"/>      
    </Grid>
</controls:MetroWindow>
