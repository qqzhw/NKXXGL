<controls:MetroWindow x:Class="ICIMS.Core.Interactivity.DefaultPopupWindows.DefaultNotificationWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            MinWidth="300" MinHeight="150" 
        xmlns:controls="http://metro.wenge.com/winfx/xaml/controls"
            Title="{Binding Title}"  ShowMaxRestoreButton="False" ShowTitleBar="True" IsWindowDraggable="False" ResizeMode="CanMinimize"   WindowStartupLocation="CenterScreen" WindowState="Normal" SizeToContent="WidthAndHeight">


    <Grid x:Name="LayoutRoot" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"> 
        <ContentControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  Content="{Binding Content}"/>      
    </Grid>
</controls:MetroWindow>
